//- index.pug
doctype html
html
  head
    script(src="https://cdn.tailwindcss.com")
  body
    h2 Uredite rezultate natjecanja "#{competition.name}"
    hr
    form(action=`/competition/${competition.id}` method="POST" class="m-5 mx-auto grid grid-cols-3 gap-2 max-w-xl")
      each game, index in games
        li(class="inline-flex gap-2 col-span-2")
          span(class="col-span-2 w-full")
            b #{game.homeTeam}
            span vs
            b  #{game.awayTeam}
          select(name=`${game.id}`)
            option(class="col-span-1 w-full" value="home" selected= game.winner == "homeTeam") #{game.homeTeam}
            option(class="col-span-1 w-full" value="draw" selected= game.winner == "draw") Nerije≈°eno
            option(class="col-span-1 w-full" value="away" selected= game.winner == "awayTeam") #{game.awayTeam}
      button(type="submit" class="col-span-3 w-full inline-block rounded border border-indigo-600 bg-indigo-600 px-12 py-3 text-sm font-medium text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500") Spremite
